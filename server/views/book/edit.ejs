<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<!--content for the Edit page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1>Edit BasketBall Player</h1>
            <form class="form" method="post">

                <div class="form-group">
                    <label for="TeamTextField">Team</label>
                    <input type="text" class="form-control"
                    id="TeamNameTextField"
                    placeholder="Enter Team"
                    name="Team" 
                    value="<%= book.Team %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="EliminatedTextField">Eliminated (y/n)</label>
                    <input type="text" class="form-control"
                    id="EliminatedTextField"
                    placeholder="Eliminated (y/n)"
                    name="Eliminated" 
                    value="<%= book.Eliminated %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="PlayersTextField">Players on Team</label>
                    <input type="text" class="form-control"
                    id="PlayersNumberTextField"
                    placeholder="Enter Players"
                    name="Players" 
                    value="<%= book.Players %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="PreviousGamesTextField">Previous Games</label>
                    <textarea type="text" class="form-control"
                    id="PreviousGames"
                    placeholder="Previous Games"
                    name="PreviousGames" required>
                    <%= book.PreviousGame %>
                </textarea>
                </div>

                <div class="form-group">
                    <label for="PlaceTextField">Place</label> <!--Edits the data and updates-->
                    <input type="number" class="form-control"
                    id="PlaceTextField"
                    placeholder="Place"
                    name="Place" 
                    value="<%= book.Place %>"
                    required>
                </div>
                
                    <br>

                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/Fifa-Team" class="btn btn-warning"> <!--Redirects user to team-builder local host page if they cancel-->
                    <i class="fas fa-undo"></i>Cancel
                </a>

            </form>
        </div>
    </div>
</div>


<%- include ('../partials/Bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>