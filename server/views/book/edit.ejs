<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<!--content for the Edit page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1>Edit BasketBall Player</h1>
            <form class="form" method="post">

                <div class="form-group">
                    <label for="nameTextField">Player FirstName</label>
                    <input type="text" class="form-control"
                    id="FirstNameTextField"
                    placeholder="Enter Player FirstName"
                    name="FirstName" 
                    value="<%= book.FirstName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Player LastName</label>
                    <input type="text" class="form-control"
                    id="lastNameTextField"
                    placeholder="Enter Player LastName"
                    name="LastName" 
                    value="<%= book.lastName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Jersey Number</label>
                    <input type="text" class="form-control"
                    id="jerseyNumberTextField"
                    placeholder="Enter the Original player Jersey Number"
                    name="JerseyNumber" 
                    value="<%= book.jerseyNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descTextField">Description/team</label>
                    <textarea type="text" class="form-control"
                    id="descTextField"
                    placeholder="Enter the description of player"
                    name="description" required>
                    <%= book.description %>
                </textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Age</label> <!--Edits the data and updates-->
                    <input type="number" class="form-control"
                    id="AgeTextField"
                    placeholder="Enter the player age"
                    name="Age" 
                    value="<%= book.Age %>"
                    required>
                </div>
                
                    <br>

                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/Team-builder" class="btn btn-warning"> <!--Redirects user to team-builder local host page if they cancel-->
                    <i class="fas fa-undo"></i>Cancel
                </a>

            </form>
        </div>
    </div>
</div>


<%- include ('../partials/Bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>