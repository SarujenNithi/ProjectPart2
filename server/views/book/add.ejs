<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>

<!--content for the Add page-->
<div class="container">
    <div class="row"> <!--Creates a table with rows and colums-->
        <div class="col-md-offset-3 col-md-6"><!--creates columns with offset-->
            <h1>Add Fifa Team</h1> <!--header-->
            <form class="form" method="post">

                <div class="form-group">
                    <label for="TeamTextField">Country Team</label> <!--Displays title-->
                    <input type="text" class="form-control"
                    id="TeamTextField"
                    placeholder="Enter Team"     
                    name="Team" required> <!--shows placeholder text until user enters-->
                </div>

                <div class="form-group">
                    <label for="EliminatedTextField">Eliminated (y/n)</label>
                    <input type="text" class="form-control"
                    id="EliminatedTextField"
                    placeholder="Eliminated (y/n)"
                    name="Eliminated" required>
                </div>

                <div class="form-group">
                    <label for="PlayersTextField">Players</label>
                    <input type="text" class="form-control"
                    id="PlayersTextField"
                    placeholder="Players on Team"
                    name="Players" required>
                </div>

                <div class="form-group">
                    <label for="PreviousGamesTextField">PreviousGames</label>
                    <textarea type="text" class="form-control"
                    id="PreviousGamesTextField"
                    placeholder="Enter Previous Games"
                    name="PreviousGames" required></textarea>
                </div>

                <div class="form-group">
                    <label for="PlaceTextField">Place</label>
                    <input type="number" class="form-control"
                    id="PlaceTextField"
                    placeholder="Enter Team Place"
                    name="Place" required>
                </div>
                
                    <br>

                <button class="btn-btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/Fifa-Team" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel
                </a>

            </form>
        </div>
    </div>
</div>

<%- include ('../partials/Bottom_nav.ejs') %>
