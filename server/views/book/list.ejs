<%- include ('../partials/header.ejs') %>
<%- include ('../partials/main_nav.ejs') %>
<!-- Main Content -->

<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-10">
            <h1>BasketBall Team Builder</h1>
            <a href="/Fifa-Team/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Team </a>
            <br>
            <br>
    <table class="table table-bordered table-striped table-hover">
    <tr class="d-flex"><!--Table row for first row/ titles for each coloumn-->
        <th class="text-center col-2">Team</th>
        <th class="text-center col-2">Eliminated (y/n)</th>
        <th class="text-center col-1">Players</th>
        <th class="text-center col-5">Previous Games</th>
        <th class="text-center col-1">place</th>
        <th class="text-center col-1"></th>
        <th class="text-center col-1"></th>

    </tr>
    <!--Repeat the template / loop-->
    <% for(let count=0; count < Booklist.length; count++) { %>
        <tr class="d-flex">
            <td class="text-center col-2"><%= Booklist[count].Team %></td>
            <td class="text-center col-2"><%= Booklist[count].Eliminated %></td>
            <td class="text-center col-1"><%= Booklist[count].Players %></td>
            <td class="text-center col-5"><%= Booklist[count].PreviousGames %></td>
            <td class="text-center col-1"><%= Booklist[count].Place %></td>
            <td class="text-center col-1">
                <a href="/Fifa-Team/edit/<%= Booklist[count]._id %>"
                    class="btn btn-primary">
                    <i class="fas fa-pencil-alt"></i> Edit </a>
            </td>
            <td class="text-center col-1">
                <a href="/Fifa-Team/delete/<%= Booklist[count]._id %>"
                    class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete </a>
            </td>
        </tr>

    <% } %>
    </table>

</div>
</div>
</main>
<%- include ('../partials/Bottom_nav.ejs') %>
<%- include ('../partials/footer.ejs') %>